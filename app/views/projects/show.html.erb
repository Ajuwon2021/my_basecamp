<div class="hero">
  <div class="hero-body">
    <h1><%= @project.project_title %></h1>
    <p><%= @project.project_content %></p>
    <div style="display: flex; justify-content: space-between; align-items: center;">
      <div>
        <%= link_to "Back to projects", projects_path, class: "btn btn-primary" %>
      </div>
      <div>
        <%= link_to "Edit this project", edit_project_path(@project), class: "btn btn-secondary" %>
      </div>
      <div>
        <%= button_to "Destroy this project", @project, method: :delete, class: "btn btn-danger" %>
      </div>
    </div>
  </div>
</div>
